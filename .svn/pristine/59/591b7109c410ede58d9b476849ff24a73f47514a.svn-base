


@include extjs-button-small-ui(
    $ui: 'form-panel',
    $background-color : $db-color-ultra-light,
    $background-color-over: $db-color-ultra-light,
    $background-color-focus: $db-color-ultra-light, 
    $background-color-pressed: $db-color-ultra-light,
    $inner-border-color-focus: $db-color-ultra-light,
    $inner-border-color-focus-pressed: $db-color-ultra-light,
    $inner-border-color-focus-over: $db-color-ultra-light
);


@include extjs-panel-ui(
    $ui: 'form-panel',
    $ui-header-color: $db-color-medium-dark,
    $ui-header-font-size: 20px,
    $ui-header-line-height: 26px,
    $ui-header-font-weight: normal,
    
    $ui-header-icon-height: 24px,
    $ui-header-icon-width: 24px,
    $ui-header-icon-spacing: 8px,
    
    $ui-header-background-color: $db-color-ultra-light,
    $ui-header-padding: 4px 12px 4px 12px,
    $ui-header-text-margin: 0,
    $ui-header-noborder-adjust: false,
    
    //$ui-header-inner-border-color: red,//#E1E2E3,//$db-color-light,
    //$ui-header-inner-border-width :10px, //TODO
    
    $ui-body-background-color: $db-color-ultra-light
    
);




.form-panel {
    
    .x-box-inner {
        background: $db-color-medium-dark;
        padding: 0;
    }
    
    
    .x-toolbar-default {
        padding: 0;
        border-style: solid;
        border-color: $db-color-medium-dark;
        border-width: 0;
        background-image: none;
        background-color: $db-color-medium-dark;
    }
}


